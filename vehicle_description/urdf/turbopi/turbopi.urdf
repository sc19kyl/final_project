<?xml version="1.0" encoding="utf-8"?>
<!-- =================================================================================== -->         
<!--   This URDF contains a robot model with Velocity Controllers and various sensors -->
<!--               THis file contains planar_move plugin that moves the robot         -->
<!-- =================================================================================== -->
<robot name="turbopi">
	

	<material name="red">
    	<color rgba="0.8 0 0 1"/>
   	</material>

    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
	
	<link name="turbopi_base_footprint">
	    <visual>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <geometry>
		<box size="0.001 0.001 0.001"/>
	      </geometry>
	    </visual>
	</link>


	<joint name="turbopi_base_footprint_joint" type="fixed">
	    <origin rpy="0 0 0" xyz="0 0 0.127"/>
	    <!-- ${wheel_radius} property must be defined inside wheel description -->
	    <parent link="turbopi_base_footprint"/>
	    <child link="turbopi_base_link"/>
	</joint>
	
	<!-- base link -->
	<link name="turbopi_base_link">
		<inertial>
		<mass value="125.0"/>
		<origin xyz="0 0 0"/>
		<inertia ixx="1.391" ixy="0.004" ixz="0.0" iyy="6.853" iyz="0.0" izz="6.125"/>
		</inertial>
		<visual name="chassis_visual">
			<origin xyz="0 0 0" rpy=" 0 0 0"/>
			<geometry>
				<box size="0.4 0.3 0.15"/>
			</geometry>
			<material name="darkgrey">
				<color rgba="0.1 0.1 0.1 1"/>
			</material>
		</visual>

		<collision name="collision">
			<origin xyz="0 0 0" rpy=" 0 0 0"/>
			<geometry>
				<box size="0.4 0.3 0.15"/>
			</geometry>
			<material name="darkgrey">
				<color rgba="0.1 0.1 0.1 1"/>
			</material>
		</collision>
	</link>
	
	<!-- Right Wheel Front-->
	<link name="turbopi_front_right_wheel_link">
	    <visual>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <geometry>
		<mesh filename="package://hydra_one_description/models/hydra_one/meshes/wheels/omni_wheel_2.dae"/>
	      </geometry>
	    </visual>
	    <collision>
	      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
	      <geometry>
		<cylinder length="0.087" radius="0.127"/>
	      </geometry>
	    </collision>
	    <inertial>
	      <mass value="6.5"/>
	      <origin xyz="0 0 0"/>
	      <inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
	    </inertial>
		</link>
	<gazebo reference="turbopi_front_right_wheel_link">
		<mu1 value="1.0"/>
		<mu2 value="1.0"/>
		<kp value="10000000.0"/>
		<kd value="1.0"/>
		<fdir1 value="1 0 0"/>
		<turnGravityOff>false</turnGravityOff>
	</gazebo>
	<!-- FRONT_RIGHT_WHEEL_JOINT -->
	<joint name="turbopi_front_right_wheel_joint" type="continuous">
		<parent link="turbopi_base_link"/>
		<child link="turbopi_front_right_wheel_link"/>
		<origin rpy="0 0 0" xyz="0.175 -0.1645 -0.05"/>
		<axis rpy="0 0 0" xyz="0 1 0"/>
		<limit effort="100" velocity="100"/>
		<joint_properties damping="0.0" friction="0.0"/>
	</joint>


	<!-- FRONT Wheel Left-->
	<link name="turbopi_front_left_wheel_link">
		<visual>
			<origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
			<geometry>
				<cylinder radius="0.05" length="0.03"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
			<geometry>
				<cylinder radius="0.05" length="0.03"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="5"/>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
		</inertial>
	</link>
	<gazebo reference="turbopi_front_left_wheel_link">
		<mu1 value="1.0"/>
		<mu2 value="1.0"/>
		<kp value="10000000.0"/>
		<kd value="1.0"/>
		<fdir1 value="1 0 0"/>
		<turnGravityOff>false</turnGravityOff>
	</gazebo>
	<!-- FRONT_left_WHEEL_JOINT -->
	<joint name="turbopi_front_left_wheel_joint" type="continuous">
		<parent link="turbopi_base_link"/>
		<child link="turbopi_front_left_wheel_link"/>
		<origin rpy="0 0 0" xyz="0.175 0.1645 -0.05"/>
		<axis rpy="0 0 0" xyz="0 1 0"/>
		<limit effort="100" velocity="100"/>
		<joint_properties damping="0.0" friction="0.0"/>
	</joint>

	<!-- back Wheel Left-->
	<link name="turbopi_back_left_wheel_link">
		<visual>
			<origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
			<geometry>
				<cylinder radius="0.05" length="0.03"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
			<geometry>
				<cylinder radius="0.05" length="0.03"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="5"/>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
		</inertial>
	</link>
	<gazebo reference="turbopi_back_left_wheel_link">
		<mu1 value="1.0"/>
		<mu2 value="1.0"/>
		<kp value="10000000.0"/>
		<kd value="1.0"/>
		<fdir1 value="1 0 0"/>
		<turnGravityOff>false</turnGravityOff>
	</gazebo>
	<!-- back_left_WHEEL_JOINT -->
	<joint name="turbopi_back_left_wheel_joint" type="continuous">
		<parent link="turbopi_base_link"/>
		<child link="turbopi_back_left_wheel_link"/>
		<origin rpy="0 0 0" xyz="-0.175 0.1645 -0.05"/>
		<axis rpy="0 0 0" xyz="0 1 0"/>
		<limit effort="100" velocity="100"/>
		<joint_properties damping="0.0" friction="0.0"/>
	</joint>
	
	<!-- back Wheel right-->
	<link name="turbopi_back_right_wheel_link">
		<visual>
			<origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
			<geometry>
				<cylinder radius="0.05" length="0.03"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz="0 0 0" rpy="1.57079632679 0 0"/>
			<geometry>
				<cylinder radius="0.05" length="0.03"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="5"/>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
		</inertial>
	</link>
	<gazebo reference="turbopi_back_right_wheel_link">
		<mu1 value="1.0"/>
		<mu2 value="1.0"/>
		<kp value="10000000.0"/>
		<kd value="1.0"/>
		<fdir1 value="1 0 0"/>
		<turnGravityOff>false</turnGravityOff>
	</gazebo>
	<!-- back_left_WHEEL_JOINT -->
	<joint name="turbopi_back_right_wheel_joint" type="continuous">
		<parent link="turbopi_base_link"/>
		<child link="turbopi_back_right_wheel_link"/>
		<origin rpy="0 0 0" xyz="-0.175 -0.1645 -0.05"/>
		<axis rpy="0 0 0" xyz="0 1 0"/>
		<limit effort="100" velocity="100"/>
		<joint_properties damping="0.0" friction="0.0"/>
	</joint>

	<!-- Default plugin that parses the transmission tags and loads the appropriate hardware interfaces and controller manager 
	<gazebo>
	<plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
		<robotNamespace>/hydra_one</robotNamespace>
	</plugin>
	</gazebo> -->
  <gazebo>
    <plugin filename="libgazebo_ros_planar_move.so" name="omni_steering">
      <commandTopic>turbopi/cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryRate>50.0</odometryRate>
      <robotBaseFrame>turbopi_base_footprint</robotBaseFrame>
      <publishTF>true</publishTF>
    </plugin>
  </gazebo>

	<!-- Front lower camera -->
<!-- Reference: http://gazebosim.org/tutorials?tut=ros_gzplugins -->
<!-- Define link, joint, gazebo reference for the link,  and Gazebo plugin for the camera -->
 <link name="front_lower_camera_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="1.6e-5" ixy="0.0" ixz="0.0" iyy="1.6e-5" iyz="0.0" izz="1.6e-5"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size= "0.05 0.05 0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
    <gazebo reference="front_lower_camera_link">
        <material>Gazebo/Red</material>
    </gazebo>
  <joint name="front_lower_camera_joint" type="fixed">
    <parent link="turbopi_base_link"/>
    <child link="front_lower_camera_link"/>
    <origin xyz="0.2 0 -0.05" rpy="0 0 0"/>
  </joint>

<!-- gazebo reference and plugin for the camera -->
  <gazebo reference="front_lower_camera_link">
    <sensor type="camera" name="front_lower_camera_sensor">
      <update_rate>30.0</update_rate>
      <camera name="front_lower_camera">
        <pose> 0 0 0 0 0 0 </pose>
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="front_lower_camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>false</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>/turbopi/front_lower_camera_sensor</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>/turbopi/front_lower_camera_info</cameraInfoTopicName>
        <frameName>front_lower_camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>
	
	<!-- front laser link -->
<!-- Define link, joint, gazebo reference for the link,  and Gazebo plugin for the laser -->
  <link name="center_laser_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="6.93e-05" ixy="0.0" ixz="0.0" iyy="6.93e-05" iyz="0.0" izz="7.2e-05"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
    <gazebo reference="center_laser_link">
        <material>Gazebo/Blue</material>
    </gazebo>
  <joint name="cente-0.05r_laser_joint" type="fixed">
    <parent link="turbopi_base_link"/>
    <child link="center_laser_link"/>
    <origin xyz="0.25 0 0.025" rpy="0 0 0"/>
  </joint>

<!-- gazebo reference and the plugin -->
  <gazebo reference="center_laser_link">
    <sensor name='center_laser_sensor' type='ray'>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
          <!--<vertical>
            <samples>16</samples>
            <min_angle>-0.1</min_angle>
            <max_angle>-0.35</max_angle>
          </vertical> -->
        </scan>
        <range>
          <min>0.0</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name='center_laser_controller' filename='libgazebo_ros_laser.so'>
        <topicName>/turbopi/laser/scan</topicName>
        <frameName>center_laser_link</frameName>
      </plugin>
      <always_on>1</always_on>
      <update_rate>40</update_rate>
      <visualize>0</visualize>
    </sensor>
  </gazebo>

  <!-- front depth_sensor link -->
<!-- Define link, joint, gazebo reference for the link,  and Gazebo plugin for the laser -->
  <link name="front_depth_sensor_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="6.93e-05" ixy="0.0" ixz="0.0" iyy="6.93e-05" iyz="0.0" izz="7.2e-05"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size= "0.03 0.16 0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="kinect_optical_joint" type="fixed">
      <axis xyz="0 1 0" />
      <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
      <parent link="front_depth_sensor_link"/>
      <child link="kinect_optical_link"/>
    </joint>
  <!-- Dummy Link -->
  <link name="kinect_optical_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size= "0.03 0.16 0.03"/>
      </geometry>
      <material name="red"/>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>


    <gazebo reference="front_depth_sensor_link">
        <material>Gazebo/Black</material>
    </gazebo>
  <joint name="front_depth_sensor_joint" type="fixed">
    <parent link="turbopi_base_link"/>
    <child link="front_depth_sensor_link"/>
    <origin xyz="0.2 0 0.075" rpy="0 0 0"/>
  </joint>

<gazebo reference="front_depth_sensor_link">
  <sensor name="front_depth_sensor_camera" type="depth">
    <update_rate>20</update_rate>
    <camera>
      <horizontal_fov>1.047198</horizontal_fov>
      <image>
        <width>640</width>
        <height>480</height>
        <format>R8G8B8</format>
      </image>
      <clip>
        <near>0.05</near>
        <far>3</far>
      </clip>
    </camera>
    <plugin name="front_depth_sensor_controller" filename="libgazebo_ros_openni_kinect.so">
      <baseline>0.2</baseline>
      <alwaysOn>true</alwaysOn>
      <updateRate>1.0</updateRate>
      <cameraName>/turbopi/front_depth_sensor_camera_ir</cameraName>
      <imageTopicName>turbopi/front_depth_sensor_camera/color/image_raw</imageTopicName>
      <cameraInfoTopicName>/turbopi/front_depth_sensor_camera/color/camera_info</cameraInfoTopicName>
      <depthImageTopicName>turbopi/front_depth_sensor_camera/depth/image_raw</depthImageTopicName>
      <depthImageInfoTopicName>turbopi/front_depth_sensor_camera/depth/camera_info</depthImageInfoTopicName>
      <pointCloudTopicName>turbopi/front_depth_sensor_camera/depth/points</pointCloudTopicName>
      <frameName>kinect_optical_link</frameName>
      <pointCloudCutoff>0.5</pointCloudCutoff>
      <pointCloudCutoffMax>3.0</pointCloudCutoffMax>
      <distortionK1>0.00000001</distortionK1>
      <distortionK2>0.00000001</distortionK2>
      <distortionK3>0.00000001</distortionK3>
      <distortionT1>0.00000001</distortionT1>
      <distortionT2>0.00000001</distortionT2>
      <CxPrime>0</CxPrime>
      <Cx>0</Cx>
      <Cy>0</Cy>
      <focalLength>0</focalLength>
      <hackBaseline>0</hackBaseline>
    </plugin>
  </sensor>
</gazebo>

  <gazebo>
    <plugin name="p3d" filename="libgazebo_ros_p3d.so">
      <!-- <robotNamespace>/hydra_one</robotNamespace> -->
      <bodyName>turbopi_base_footprint</bodyName>
      <topicName>base_pose_ground_truth</topicName>
      <frameName>map</frameName>
      <updateRate>100.0</updateRate>
    </plugin>
  </gazebo>
</robot>
	
